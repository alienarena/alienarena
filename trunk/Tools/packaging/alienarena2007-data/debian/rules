#! /usr/bin/make -f
# -*- makefile -*-

build: build-stamp
build-stamp:
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	dh_clean

install: build
	dh_testdir
	dh_testroot
	dh_install -palienarena2007-data -X.svn/ -X.exe -X.dll -X.ico -X.bat

# Build architecture-dependent files here.
binary-arch:
# Nothing to do by defualt

# Build architecture-independent files here.
binary-indep: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs -palienarena2007-data docs/changelog.txt
	dh_installdocs -palienarena2007-data
	dh_installdeb -palienarena2007-data
	dh_shlibdeps -palienarena2007-data
	dh_compress -palienarena2007-data -Xcreative-commons-by-nc-nd-3.0
	dh_fixperms -palienarena2007-data
	dh_gencontrol -palienarena2007-data
	dh_md5sums -palienarena2007-data
	dh_builddeb -palienarena2007-data

binary: binary-indep
.PHONY: build clean binary-arch binary-indep binary install
